# 0 - fire
# 1 - water
# 2 - earth
# 3 - air 
# 4 - light 
# 5 - dark 

execute if score .element mcrpg matches 1 run function mcrpg:item/charge_effect/magic/fire
execute if score .element mcrpg matches 2 run function mcrpg:item/charge_effect/magic/water
execute if score .element mcrpg matches 3 run function mcrpg:item/charge_effect/magic/air
execute if score .element mcrpg matches 4 run function mcrpg:item/charge_effect/magic/earth
execute if score .element mcrpg matches 5 run function mcrpg:item/charge_effect/magic/light
execute if score .element mcrpg matches 6 run function mcrpg:item/charge_effect/magic/dark
execute if score .element mcrpg matches 7 run function mcrpg:item/charge_effect/magic/ender